@model ASP.NETCoreIdentityCustom.Models.Categoria//Modelo a trabajar
@{
    Layout = null;
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>¿SEGURO QUIERES ELIMINAR ESTA CATEGORIA?</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Delete">
                <input asp-for="IdCategoria" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="NombreCategoria" class="control-label"></label>
                    <input asp-for="NombreCategoria" class="form-control" disabled />
                    <span asp-validation-for="NombreCategoria" class="text-danger" data-valmsg-for="NombreCategoria" data-valmsg-replace="true"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ColorCategoria" class="control-label"></label>
                    <input asp-for="ColorCategoria" class="form-control" disabled />
                    <span asp-validation-for="ColorCategoria" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Eliminar Categoria" class="btn btn-outline-danger" />
                    <a class="btn btn-outline-primary" href="@Url.Action("Index")">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}