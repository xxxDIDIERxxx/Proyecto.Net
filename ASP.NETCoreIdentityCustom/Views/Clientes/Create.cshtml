@model ASP.NETCoreIdentityCustom.Models.Cliente

@{
    Layout = null;
    ViewData["Title"] = "Create";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/images/jj.png" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <link href="~/css/register-a_c.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
          integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <div class="container">
        <header>Registrar Usuario</header>
        <form form id="registerForm" asp-route-returnUrl="" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form first">
                <div class="details personal">
                    <span class="title">Datos del Usuario</span>

                    <div class="fields">
                        <div class="input-field">
                            <label>Cedula</label>
                            <input asp-for="Cedula" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                            <p id="v1"></p>
                        </div>
                        <div class="input-field">
                            <label>Nombre</label>
                            <input asp-for="Nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="input-field">
                            <label>Direccion</label>
                            <input asp-for="Direccion" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                            <p id="v5"></p>
                        </div>
                        <div class="input-field">
                            <label>Telefono</label>
                            <input asp-for="Telefono" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>
                        <button class="Guardar">
                            <span class="btnGuardar"><a value="Create" id="registerSubmit" type="submit">Registrar</a></span>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
</html>

